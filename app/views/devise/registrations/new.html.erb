<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

<div class="dn__box">
  <div class="dn__box2">
    <div class="dn__box3">

      <h2 class="dn__title">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="dn__error">
          <%# <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="dn__field">
          <%= f.label :Nickname %><em></em><br />
          <%= f.text_field :nickname, autofocus: true, size: "0" %>
        </div>

        <div class="dn__field">
          <%= f.label :Email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="dn__field">
          <%= f.label :Password %>
          <% if @minimum_password_length %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "*At least #{@minimum_password_length} characters" %>
        </div>

        <div class="dn__field">
          <%= f.label :encrypted_password %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="dn__actions">
          <%= f.submit "Create Account", class: "dn__btn" %>
        </div>
      <% end %>

      <%# <div class="dn__lender"> %>
        <%# <%= render "devise/shared/links" %>
      <%# </div> %>
    </div>
  </div>
</div>